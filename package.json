{
  "name": "87_tools",
  "version": "0.1.0",
  "engines": {
    "node": "11.9.0"
  },
  "private": true,
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "bcrypt": "^3.0.6",
    "cors": "^2.8.5",
    "cross-fetch": "^3.0.1",
    "date-fns": "^1.30.1",
    "express": "^4.16.4",
    "husky": "^1.3.1",
    "jsonwebtoken": "^8.5.1",
    "jspdf": "^1.5.3",
    "lint-staged": "^8.1.4",
    "lodash": "^4.17.11",
    "mongodb": "^3.1.13",
    "mongoose": "^5.4.16",
    "morgan": "^1.9.1",
    "prettier": "^1.16.4",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-redux": "^7.0.3",
    "react-router-dom": "^4.3.1",
    "react-scripts": "2.1.5",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "regenerator-runtime": "^0.13.2"
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "scripts": {
    "start": "node ./build/index.js",
    "dev": "react-scripts start",
    "build": "yarn run build:css && react-scripts build && yarn run build-babel",
    "build:css": "postcss src/client/tailwind.css -o src/client/index.css",
    "build-babel": "babel -d ./build ./src/server -s",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "server": "nodemon --watch ./src/server --exec babel-node ./src/server/index.js"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "autoprefixer": "^9.5.1",
    "postcss-cli": "^6.1.2",
    "tailwindcss": "^0.7.4"
  }
}
